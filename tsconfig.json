{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.stories.tsx"]
}
